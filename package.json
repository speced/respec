    "build:w3c": "node ./tools/builder.js w3c",
    "build:dini-debug": "node run build:dini -- --debug",
    "build:dini": "node ./tools/builder.js dini",
    "builddeps": "rollup -c js/deps/rollup.config.js && rollup -c worker/rollup.config.js",
